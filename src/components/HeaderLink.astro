---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;
---

<a href={url}>{title}</a>

<style>
  a {
    margin: 0 1rem;
    text-decoration: none;
    color: black;
    padding: 1rem;
  }

  a:hover {
    color: #333;
    transform: scale(1.5, 1.5);
  }
</style>
